# ===========================
# LastWar Chip Guide - Configuração
# ===========================

# Copie este arquivo para .env e preencha com seus valores

# ===========================
# OAuth (Opcional)
# ===========================
VITE_OAUTH_URL=http://localhost:3000
VITE_OAUTH_APP_ID=test-app-id

# ===========================
# Banco de Dados (Opcional)
# ===========================
DATABASE_URL=mysql://user:password@localhost:3306/lastwar

# ===========================
# API OpenAI/Gemini (Opcional)
# ===========================
OPENAI_API_KEY=your-api-key-here

# ===========================
# Storage S3 (Opcional)
# ===========================
BUILT_IN_FORGE_API_URL=https://storage.example.com
BUILT_IN_FORGE_API_KEY=your-storage-key

# ===========================
# Analytics (Opcional)
# ===========================
VITE_ANALYTICS_ENDPOINT=https://analytics.example.com
VITE_ANALYTICS_WEBSITE_ID=your-website-id

# ===========================
# Ambiente
# ===========================
NODE_ENV=development
PORT=3000

# ===========================
# Logging
# ===========================
LOG_LEVEL=info
